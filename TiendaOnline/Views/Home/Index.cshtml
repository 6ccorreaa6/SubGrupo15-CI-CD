@{
    ViewData["Title"] = "Inicio";
}

<!-- Estilos e íconos -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<!-- Banner estilo Mercado Libre, ahora full width real -->
<div style="width: 100vw; margin-left: calc(-50vw + 50%); border-radius: 0;" class="bg-warning text-dark text-center py-5">
    <h1 class="display-4 fw-bold">ENVÍO GRATIS</h1>
    <p class="fs-4">En tu primera compra</p>
    <button class="btn btn-dark btn-lg">
        EXCLUSIVO EN APP <span class="material-icons">smartphone</span>
    </button>
</div>


<div class="container-fluid p-0">
    <!-- Sección de accesos rápidos -->
    <div class="container py-4">
        <div class="row row-cols-2 row-cols-md-6 g-3 text-center">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">history</span>
                        <h6 class="mt-2">Visto recientemente</h6>
                        <p class="text-muted small">Productos que miraste.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">place</span>
                        <h6 class="mt-2">Ubicación</h6>
                        <p class="text-muted small">Consulta costos de envío.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">account_circle</span>
                        <h6 class="mt-2">Cuenta</h6>
                        <p class="text-muted small">Inicia sesión o regístrate.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">credit_card</span>
                        <h6 class="mt-2">Medios de pago</h6>
                        <p class="text-muted small">Seguridad en tus pagos.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">attach_money</span>
                        <h6 class="mt-2">Menos de $40.000</h6>
                        <p class="text-muted small">Ofertas accesibles.</p>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <span class="material-icons fs-1">star</span>
                        <h6 class="mt-2">Más vendidos</h6>
                        <p class="text-muted small">Tendencias actuales.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-5">
        <h2 class="mb-4 text-center">Productos Destacados</h2>
        <div class="row row-cols-1 row-cols-md-4 g-4">
            @for (int i = 1; i <= 8; i++)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="https://via.placeholder.com/300x200?text=Producto+@i" class="card-img-top" alt="Producto @i">
                        <div class="card-body">
                            <h5 class="card-title">Producto @i</h5>
                            <p class="card-text text-success fw-bold">$@((i * 10000).ToString("N0"))</p>
                            <button class="btn btn-outline-primary w-100" onclick="agregarAlCarrito(@i)">
                                Agregar al carrito <span class="material-icons">add_shopping_cart</span>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
    


<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Función SweetAlert -->
<script>
    function agregarAlCarrito(id) {
        Swal.fire({
            icon: 'success',
            title: 'Agregado',
            text: `Producto ${id} fue agregado al carrito.`,
            timer: 1500,
            showConfirmButton: false
        });
    }
</script>
