@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaOnline</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header class="header">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark py-3">
            <div class="container-fluid">
                <a class="navbar-brand text-warning fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/amasonn.jpg" alt="Logo" style="height: 50px; margin-right: 10px;" /> Amasonn
                </a>
                <form class="d-flex flex-grow-1 mx-3" asp-controller="Home" asp-action="Buscar">
                    <input class="form-control me-2" type="search" name="q" placeholder="Buscar productos..." aria-label="Buscar">
                    <button class="btn btn-warning" type="submit">Buscar</button>
                </form>
                <div class="d-flex">
                    @if (Context.Session.GetString("UsuarioNombre") != null)
                    {
                        <span class="navbar-text text-white me-3">Hola, @Context.Session.GetString("UsuarioNombre")</span>
                        <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Logout">Cerrar Sesión</a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Login">Iniciar Sesión</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">&copy; 2025 - TiendaOnline</div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>