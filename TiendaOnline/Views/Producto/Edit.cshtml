@model TiendaOnline.Models.Domian.ProductoModel

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="edit-container">
    <h2 class="title">Editar Producto</h2>

    <form asp-action="Edit" class="form-box">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ProductoId" />

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="input" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <input asp-for="Descripcion" class="input" />
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Precio"></label>
            <input asp-for="Precio" class="input" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Stock"></label>
            <input asp-for="Stock" class="input" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImagenUrl"></label>
            <input asp-for="ImagenUrl" class="input" />
            <span asp-validation-for="ImagenUrl" class="text-danger"></span>
        </div>

        <div class="button-group">
            <input type="submit" value="Guardar Cambios" class="btn-yellow" />
            <a asp-action="Index" class="btn-black">Volver a la Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', sans-serif;
        color: #000;
    }

    .edit-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        animation: fadeIn 0.4s ease-in-out;
    }

    .title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #000;
        margin-bottom: 25px;
    }

    .form-box {
        display: flex;
        flex-direction: column;
        gap: 18px;
    }

    .form-group label {
        font-weight: 600;
        margin-bottom: 5px;
    }

    .input {
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #ccc;
        width: 100%;
        transition: border 0.3s ease;
    }

    .input:focus {
        border-color: #ffe600;
        outline: none;
        box-shadow: 0 0 5px rgba(255, 230, 0, 0.5);
    }

    .button-group {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        margin-top: 20px;
    }

    .btn-yellow {
        background-color: #ffe600;
        color: #000;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s ease, background 0.3s ease;
    }

    .btn-yellow:hover {
        background-color: #ffd000;
        transform: scale(1.05);
    }

    .btn-black {
        background-color: #000;
        color: #fff;
        padding: 10px 20px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s ease, background 0.3s ease;
    }

    .btn-black:hover {
        background-color: #333;
        transform: scale(1.05);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
