@model TiendaOnline.Models.Domian.ProductoModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="delete-container">
    <h2 class="delete-title">¿Estás seguro que deseas eliminar este producto?</h2>

    <div class="delete-details">
        <div class="detail-item"><strong>Nombre:</strong> @Html.DisplayFor(model => model.Nombre)</div>
        <div class="detail-item"><strong>Descripción:</strong> @Html.DisplayFor(model => model.Descripcion)</div>
        <div class="detail-item"><strong>Precio:</strong> $@Html.DisplayFor(model => model.Precio)</div>
        <div class="detail-item"><strong>Stock:</strong> @Html.DisplayFor(model => model.Stock)</div>
        <div class="detail-item"><strong>URL Imagen:</strong> @Html.DisplayFor(model => model.ImagenUrl)</div>
    </div>

    <form asp-action="Delete" class="delete-form">
        <input type="hidden" asp-for="ProductoId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-cancel">Cancelar</a>
    </form>
</div>

<style>
    body {
        background: linear-gradient(to right, #f9f9f9, #eef1f5);
        font-family: 'Segoe UI', sans-serif;
    }

    .delete-container {
        max-width: 600px;
        margin: 50px auto;
        background: white;
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.08);
        animation: fadeIn 0.6s ease;
    }

    .delete-title {
        text-align: center;
        font-size: 1.5rem;
        color: #c82333;
        margin-bottom: 1.5rem;
    }

    .delete-details {
        margin-bottom: 2rem;
        background-color: #f8f9fa;
        padding: 1rem 1.5rem;
        border-radius: 0.7rem;
        border-left: 4px solid #dc3545;
        animation: fadeSlide 0.8s ease;
    }

    .detail-item {
        margin: 0.5rem 0;
        font-size: 1rem;
        color: #333;
    }

    .delete-form {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .btn {
        padding: 0.6rem 1.4rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

    .btn-danger:hover {
        background-color: #bd2130;
        transform: scale(1.05);
    }

    .btn-cancel {
        background-color: #f1f1f1;
        color: #333;
    }

    .btn-cancel:hover {
        background-color: #ddd;
        transform: scale(1.05);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: scale(0.95); }
        to { opacity: 1; transform: scale(1); }
    }

    @@keyframes fadeSlide {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }
</style>
