@model TiendaOnline.Models.Domian.ProductoModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="details-container">
    <h2 class="title">Detalles del Producto</h2>

    <div class="details-box">
        <div class="detail-item">
            <strong>Nombre:</strong> @Html.DisplayFor(model => model.Nombre)
        </div>
        <div class="detail-item">
            <strong>Descripci√≥n:</strong> @Html.DisplayFor(model => model.Descripcion)
        </div>
        <div class="detail-item">
            <strong>Precio:</strong> $@Html.DisplayFor(model => model.Precio)
        </div>
        <div class="detail-item">
            <strong>Stock:</strong> @Html.DisplayFor(model => model.Stock)
        </div>
        <div class="detail-item">
            <strong>Imagen URL:</strong> @Html.DisplayFor(model => model.ImagenUrl)
        </div>
    </div>

    <div class="actions">
        <a asp-action="Edit" asp-route-id="@Model?.ProductoId" class="btn btn-yellow">Editar</a>
        <a asp-action="Index" class="btn btn-black">Volver a la lista</a>
    </div>
</div>

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', sans-serif;
        color: #000;
    }

    .details-container {
        max-width: 700px;
        margin: 40px auto;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        animation: fadeIn 0.5s ease-in-out;
    }

    .title {
        text-align: center;
        font-size: 28px;
        font-weight: bold;
        color: #000;
        margin-bottom: 25px;
    }

    .details-box {
        background-color: #fefefe;
        border-left: 6px solid #ffe600;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

    .detail-item {
        margin-bottom: 15px;
        font-size: 16px;
        line-height: 1.5;
    }

    .actions {
        text-align: center;
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
    }

    .btn {
        padding: 10px 20px;
        font-weight: 600;
        border: none;
        border-radius: 8px;
        text-decoration: none;
        transition: transform 0.2s ease, background 0.3s ease;
    }

    .btn-yellow {
        background-color: #ffe600;
        color: #000;
    }

    .btn-yellow:hover {
        background-color: #ffd000;
        transform: scale(1.05);
    }

    .btn-black {
        background-color: #000;
        color: #fff;
    }

    .btn-black:hover {
        background-color: #333;
        transform: scale(1.05);
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
