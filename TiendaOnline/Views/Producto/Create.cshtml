@model TiendaOnline.Models.Domian.ProductoModel

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="form-container">
    <h2 class="form-title">Crear Nuevo Producto</h2>
    <form asp-action="Create" class="form">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-input" />
        <span asp-validation-for="Nombre" class="form-error"></span>

        <label asp-for="Descripcion" class="form-label">Descripci√≥n</label>
        <textarea asp-for="Descripcion" class="form-input" rows="3"></textarea>
        <span asp-validation-for="Descripcion" class="form-error"></span>

        <label asp-for="Precio" class="form-label">Precio</label>
        <input asp-for="Precio" class="form-input" />
        <span asp-validation-for="Precio" class="form-error"></span>

        <label asp-for="Stock" class="form-label">Stock</label>
        <input asp-for="Stock" class="form-input" />
        <span asp-validation-for="Stock" class="form-error"></span>

        <label asp-for="ImagenUrl" class="form-label">URL de Imagen</label>
        <input asp-for="ImagenUrl" class="form-input" />
        <span asp-validation-for="ImagenUrl" class="form-error"></span>

        <div class="form-actions">
            <input type="submit" value="Guardar Producto" class="btn-submit" />
            <a asp-action="Index" class="btn-cancel">Volver</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    body {
        background: linear-gradient(to right, #fdfbfb, #ebedee);
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
        padding: 0;
    }

    .form-container {
        max-width: 600px;
        margin: 50px auto;
        background: #fff;
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        animation: fadeIn 0.8s ease-out;
    }

    .form-title {
        text-align: center;
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: #333;
    }

    .form {
        display: flex;
        flex-direction: column;
    }

    .form-label {
        margin-top: 1rem;
        font-weight: 600;
        color: #555;
    }

    .form-input {
        padding: 0.6rem;
        border: 1px solid #ccc;
        border-radius: 8px;
        margin-top: 0.3rem;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-input:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.2);
    }

    .form-error {
        color: red;
        font-size: 0.9rem;
        margin-top: 0.2rem;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
    }

    .btn-submit, .btn-cancel {
        padding: 0.6rem 1.4rem;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-submit {
        background-color: #007bff;
        color: white;
    }

    .btn-submit:hover {
        background-color: #0056b3;
        transform: scale(1.03);
    }

    .btn-cancel {
        background-color: #f5f5f5;
        color: #333;
    }

    .btn-cancel:hover {
        background-color: #ddd;
        transform: scale(1.03);
    }

    .validation-summary {
        color: red;
        margin-bottom: 1rem;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>
