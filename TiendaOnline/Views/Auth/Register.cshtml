@model TiendaOnline.Models.ViewModel.RegistroViewModel

@{
    ViewData["Title"] = "Registrarse";
}

<div class="login-wrapper">
    <div class="login-card">
        <h2>Crear Cuenta</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Tu nombre completo" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" class="form-control" placeholder="ejemplo@correo.com" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clave"></label>
                <input asp-for="Clave" class="form-control" placeholder="Crea una contraseña" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmarClave"></label>
                <input asp-for="ConfirmarClave" class="form-control" placeholder="Repite la contraseña" />
                <span asp-validation-for="ConfirmarClave" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login">Registrarse</button>
        </form>

        <p class="register-link">
            ¿Ya tienes cuenta? <a asp-action="Login" asp-controller="Auth">Inicia sesión</a>
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
