@{
    ViewData["Title"] = "Registrarse";
}

<div class="login-wrapper">
    <div class="login-card">
        <h2>Crear Cuenta</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Register" asp-controller="Auth" method="post">
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" id="nombre" name="nombre" class="form-control" placeholder="Tu nombre completo" required />
            </div>

            <div class="form-group">
                <label for="correo">Correo Electrónico</label>
                <input type="email" id="correo" name="correo" class="form-control" placeholder="ejemplo@correo.com" required />
            </div>

            <div class="form-group">
                <label for="clave">Contraseña</label>
                <input type="password" id="clave" name="clave" class="form-control" placeholder="Crea una contraseña" required />
            </div>

            <div class="form-group">
                <label for="confirmarClave">Confirmar Contraseña</label>
                <input type="password" id="confirmarClave" name="confirmarClave" class="form-control" placeholder="Repite la contraseña" required />
            </div>

            <button type="submit" class="btn btn-login">Registrarse</button>
        </form>

        <p class="register-link">
            ¿Ya tienes cuenta? <a asp-action="Login" asp-controller="Auth">Inicia sesión</a>
        </p>
    </div>
</div>
