@model TiendaOnline.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-wrapper">
    <div class="login-card">
        <h2>Iniciar Sesión</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="Login" asp-controller="Auth" method="post">
            <div class="form-group">
                <label asp-for="Correo"></label>
                <input asp-for="Correo" class="form-control" placeholder="Ingresa tu correo" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clave"></label>
                <input asp-for="Clave" class="form-control" placeholder="Ingresa tu contraseña" />
                <span asp-validation-for="Clave" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login">Entrar</button>
        </form>

        <p class="register-link">
            ¿No tienes cuenta? <a asp-action="Register" asp-controller="Auth">Regístrate aquí</a>
        </p>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
